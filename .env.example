# Data Source Configuration
# Options: 'mock', 'api', 'hybrid'
# - mock: Use static mock data (fast development)
# - api: Use real backend API
# - hybrid: Mix of mock and API (write to API, read from mock)
NEXT_PUBLIC_DATA_SOURCE=mock

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Repository Configuration
NEXT_PUBLIC_USE_CACHE=true
NEXT_PUBLIC_CACHE_TTL=300000
NEXT_PUBLIC_FALLBACK_TO_MOCK=true

# Feature Flags
NEXT_PUBLIC_ENABLE_LOGGING=true
NEXT_PUBLIC_ENABLE_MOCK_DELAYS=true